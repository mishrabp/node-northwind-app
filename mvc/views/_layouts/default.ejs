    <script src="js/script.min.js"></script>
    <script src="js/vuecomponents.min.js"></script>
    <script defer src="js/googlemap.min.js"></script>
    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker
          .register("js/sw.min.js")
          .then((serviceWorker) => {
            console.log("Service Worker registered: ", serviceWorker);
          })
          .catch((error) => {
            console.error("Error registering the Service Worker: ", error);
          });

        navigator.serviceWorker.onmessage = (event) => {
          const message = JSON.parse(event.data);
          if (message && message.type.includes("/api/customer")) {
            console.log("List of customers to date", message.data);
            alert("got a fresh customer list for you.");
            //renderAttendees(message.data);
          }
          alert(message);
        };
      }
    </script>
